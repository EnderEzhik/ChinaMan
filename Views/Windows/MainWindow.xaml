<Window x:Class="ChinaMan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        xmlns:local="clr-namespace:ChinaMan"
        xmlns:vm="clr-namespace:ChinaMan.ViewModels"
        Title="ChinaMan" Height="720" Width="1280" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.9*"/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <ListView Grid.Column="0" Grid.Row="1" SelectionMode="Single" ItemsSource="{Binding ViewedMovies}" Loaded="ListView_Loaded">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Удалить"></MenuItem>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn DisplayMemberBinding="{Binding Title}" Width="250">Название</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Description}" Width="250">Описание</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding ViewedDate}" Width="150">Дата просмотра</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Rating}" Width="100">Оценка</GridViewColumn>
                    <GridViewColumn Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Click="Button_Click_1">X</Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click">Добавить просмотр</Button>
    </Grid>
</Window>
